{
  "source": {
    "include": [
      "./src/"
    ],
    "includePattern": "\\.(js|jsx)$",
    "exclude": [
      "node_modules/",
      "__tests__/",
      "coverage/",
      "lib/"
    ],
    "excludePattern": "\\.(test|spec)\\.js$"
  },
  "opts": {
    "destination": "./reference/",
    "recurse": true,
    "readme": "./README.md"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  },
  "metadata": {
    "title": "@phroun/paged-buffer API Documentation",
    "version": "0.1.0"
  },
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  },
  "templates": {
    "systemName": "@phroun/paged-buffer",
    "footer": "Generated by JSDoc for @phroun/paged-buffer",
    "copyright": "Copyright Â© 2025 Jeffrey R. Day. All rights reserved.",
    "includeDate": true,
    "navType": "vertical",
    "theme": "default",
    "linenums": true,
    "collapseSymbols": false,
    "inverseNav": false,
    "outputSourceFiles": true,
    "sourceRootPath": "src/",
    "disablePackagePath": true
  },
  "markdown": {
    "parser": "gfm",
    "hardwrap": false
  }
}
